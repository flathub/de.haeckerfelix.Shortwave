{
    "app-id" : "de.haeckerfelix.Shortwave",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command" : "shortwave",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=xdg-music"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgir=false",
                "-Dvapi=false",
                "-Dgtk_doc=false",
                "-Dlibsoup3=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate/",
                    "tag": "1.0.1"
                }
            ]
        },
        {
            "name" : "shortwave",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/World/Shortwave/uploads/805bfea4ea893b17b0adeaf7d16c7ddd/shortwave-3.1.0.tar.xz",
                    "sha256" : "b17041a93a49965d34fed581043bf021f0ee8c129addf55dc7484e721bca2c5f"
                }
            ]
        }
    ]
}
