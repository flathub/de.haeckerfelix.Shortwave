{
    "app-id" : "de.haeckerfelix.Shortwave",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "shortwave",
    "finish-args" : [
    	"--share=network",
    	"--share=ipc",
    	"--socket=fallback-x11",
    	"--socket=wayland",
    	"--device=dri",
    	"--socket=pulseaudio",
    	"--filesystem=xdg-music"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
         {
            "name" : "soup",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url": "https://gitlab.gnome.org/GNOME/libsoup",
                    "branch": "674c050e8e1a074d7a13f9a599f64be3f69db02d"
                }
            ]
        },
        {
            "name" : "gst-libav",
            "buildsystem" : "meson",
            "cleanup" : ["*.la"],
            "sources" : [
                {
                    "type" : "archive",
                    "url": "https://gstreamer.freedesktop.org/src/gst-libav/gst-libav-1.18.6.tar.xz",
                    "sha256": "e4e50dcd5a29441ae34de60d2221057e8064ed824bb6ca4dc0fd9ee88fbe9b81"
                }
            ]
        },
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgir=false",
                "-Dvapi=false",
                "-Dgtk_doc=false",
                "-Dlibsoup3=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate/",
                    "tag": "1.0.0.alpha.1"
                }
            ]
        },
        {
            "name" : "shortwave",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/World/Shortwave/uploads/f1dbdad69cbbbd620f3e9a69ae25e7fc/shortwave-3.0.0.tar.xz",
                    "sha256" : "888f4ae1e28835bab38cec439734e7c2e3aabdd198d551396d00c582ae2137f8"
                }
            ]
        }
    ]
}
