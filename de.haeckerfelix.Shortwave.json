{
    "id": "de.haeckerfelix.Shortwave",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm18"
    ],
    "command": "shortwave",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=xdg-music"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm18/bin"
    },
    "modules": [
        {
            "name": "glycin-loaders",
            "buildsystem": "meson",
            "config-opts": [
                "-Dglycin-loaders=true",
                "-Dlibglycin=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glycin/1.1/glycin-1.1.1.tar.xz",
                    "sha256": "560ee42167c1ed22826618e61d83e49140db5bf47a65a9ba8ece2cd73d2a4aa8"
                }
            ]
        },
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "--libdir=/app/lib",
                "-Dgir=false",
                "-Dvapi=false",
                "-Dgtk_doc=false",
                "-Ddemos=false",
                "-Dvector_renderer=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate.git",
                    "tag": "1.3.0"
                }
            ]
        },
        {
            "name": "shortwave",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/Shortwave.git",
                    "commit": "9a7e5200bc0ad83cc04287d07a525dd1c0beda2b"
                },
                "generated-sources.json",
                {
                    "type": "shell",
                    "commands": [
                        "mkdir .cargo",
                        "cp cargo/config .cargo/"
                    ]
                }
            ]
        }
    ]
}
